@using MvcCV.Models.Entity
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{  
    
    string spanColor = "";
        }
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div>
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        if (item.ID % 2 == 0)
                                        {
                                            spanColor = "bg-primary";

                                        }
                                        else
                                        {
                                            spanColor = "bg-success";
                                        }
                                        <div class="time-label">
                                            <span class="@spanColor">
                                                @item.Tarih
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-calendar bg-primary"></i>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                                <div class="timeline-body">
                                                    <a href="@item.Link">Go Certificate</a>
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Certificates/BringCertificate/@item.ID" class="btn btn-primary btn-sm">Edit</a>
                                                    <a href="/Certificates/DeleteCertificate/@item.ID" class="btn btn-danger btn-sm">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <a href="/Certificates/AddCertificate/" class="btn btn-success">Add Certificate</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

